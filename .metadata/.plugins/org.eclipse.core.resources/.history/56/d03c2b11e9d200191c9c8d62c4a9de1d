void ADC_Init (void){

	// ADC Enable
	SET_BIT(ADCSRA,ADEN)  ;


	// Prescaler Configuration as 128




	// Referance Voltage as AVCC with external capacitor

	CLR_BIT(ADMUX,REFS1)  ;
	SET_BIT(ADMUX,REFS0)  ;


	// ADC Data Rgith Adjustment



}


